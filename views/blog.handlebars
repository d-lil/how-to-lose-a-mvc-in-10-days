<div class="card text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>{{comment}}</p>
    <div class="form-group new-comment-form">
        <label for="text">Enter your comment:</label>
        <textarea class="form-input" id="text" name="text"></textarea>
      
        <button type="submit" class="btn btn-primary">Add a comment</button>
    </div>
  <div class="col-md-6">
    <h3>Current comments:</h3>
  </div>
    <div class="row mb-2 comment-list">
      <div class="col-md-8">
        <h4><a href="/comment/{{comment.id}}">{{text}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
  
</div>
